<body>
  <div class="wrap">
    <h1>Login Demo</h1>
    <label for="user">Username</label>
    <input id="user" type="text" placeholder="Enter username" />

    <label for="pw">Password</label>
    <input id="pw" type="password" placeholder="Enter password" />

    <button onclick="submitLogin()">Sign in</button>

    <div id="result" class="output" style="display:none"></div>
  </div>

  <script>
    function submitLogin(){
      const u = document.getElementById("user").value.trim();
      const p = document.getElementById("pw").value;
      if(!u || !p){ alert("Please enter both username and password"); return; }

      // 結果を画面に表示
      const result = document.getElementById("result");
      result.style.display = "block";
      result.textContent = "Entered → Username: " + u + " | Password: " + p;
    }
  </script>
</body>
